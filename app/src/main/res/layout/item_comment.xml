<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_screen_left"
        android:paddingRight="@dimen/margin_screen_left"
        android:gravity="center_vertical"
        android:paddingTop="8dp">
        <com.aidongxiang.app.widgets.CircleImageView
            android:id="@+id/ivItemAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="按时撒大声地"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2017-12-23"
                android:textColor="@color/gray7"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivItemPraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/common_btn_like_nor"/>
        <TextView
            android:id="@+id/tvItemPraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:text="235"
            android:textColor="@color/gray7"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/common_btn_more"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="@dimen/margin_screen_left"
        android:paddingRight="@dimen/margin_screen_right"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地按时撒大声地"
        android:textColor="@color/black5"/>

    <View style="@style/line"/>
</LinearLayout>
