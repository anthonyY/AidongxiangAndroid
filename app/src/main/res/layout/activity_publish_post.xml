<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aidongxiang.app.ui.square.PublishPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_bg"
        android:id="@+id/titlebar"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:navigationIcon="@drawable/common_btn_back"
            app:elevation="0dp"
            app:navigationIcon="@drawable/common_btn_back"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textSize="16sp"
                android:textColor="@color/purple"
                android:layout_gravity="right"
                android:minHeight="32dp"
                android:minWidth="56dp"
                android:layout_marginRight="@dimen/margin_screen_right"
                style="@style/btnWhateRoundStyle"/>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llSelectButton">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="left|top"
                    android:minLines="5"
                    android:hint="分享新鲜事..."
                    android:padding="8dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_screen_left"
                    android:paddingRight="@dimen/margin_screen_right"/>

                <RelativeLayout
                    android:id="@+id/rl_publish_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_video_thumb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="200dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/margin_screen_left"
                        android:paddingRight="@dimen/margin_screen_right"
                        android:paddingTop="8dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/img_nodata" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_video_thumb"
                        android:layout_alignLeft="@+id/iv_video_thumb"
                        android:layout_alignRight="@+id/iv_video_thumb"
                        android:layout_alignTop="@+id/iv_video_thumb"
                        android:scaleType="centerInside"
                        android:src="@drawable/play_big" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/llSelectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tempaView"
            android:background="@color/white"
            >


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/iv_publish_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/btn_transparent_selector"
                    android:layout_centerInParent="true"
                    android:src="@drawable/common_btn_pic" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/iv_publish_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/btn_transparent_selector"
                    android:layout_centerInParent="true"
                    android:src="@drawable/common_btn_video" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/iv_publish_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/btn_transparent_selector"
                    android:layout_centerInParent="true"
                    android:src="@drawable/common_btn_expression" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/iv_publish_select_360"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/btn_transparent_selector"
                    android:layout_centerInParent="true"
                    android:src="@drawable/common_btn_full_shot" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/tempaView"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="0dp"/>
    </RelativeLayout>
</LinearLayout>
