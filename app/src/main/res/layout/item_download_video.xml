<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_screen_left"
        android:paddingRight="@dimen/margin_screen_right"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ivItemSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            android:src="@drawable/common_btn_select_nor"/>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/iv_item_img"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="#d7d"/>
            <ImageView
                android:id="@+id/iv_item_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/common_btn_play"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black3"
                android:textSize="14sp"
                android:lines="2"
                android:layout_marginBottom="16dp"
                android:text=" "/>

            <LinearLayout
                android:id="@+id/ll_iten_downloading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/pb_item_download_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:maxHeight="4dp"
                    android:minHeight="4dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="0dp"
                    android:progress="50"
                    android:secondaryProgress="60"
                    android:layout_marginBottom="4dp"
                    android:progressDrawable="@drawable/progressbar_download"
                    android:thumb="@android:color/transparent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray7"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:drawablePadding="8dp"
                        android:text="16.2MB/s"/>
                    <TextView
                        android:id="@+id/tv_item_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray7"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/common_icon_time"
                        android:drawablePadding="8dp"
                        android:text=""/>
                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <TextView
                    android:id="@+id/tv_item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray7"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:drawablePadding="8dp"
                    android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line"
        android:id="@+id/lineItem"
        android:layout_marginLeft="@dimen/margin_screen_left"/>
</LinearLayout>
